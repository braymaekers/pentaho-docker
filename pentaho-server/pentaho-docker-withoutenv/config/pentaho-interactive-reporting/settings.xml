<settings>
    <!-- set this to true for production, and false for development/localization -->
    <cache-messages>true</cache-messages>
    <!-- how far ahead to set the browser's cache -->
    <max-age>2628001</max-age>
    <cache>true</cache>
    
	<!-- Settings for the PUC "new" toolbar dropdown: priority, label, tabName, action-url -->  
	<new-toolbar-button>2,newInteractiveReport,interactiveReport,api/repos/pentaho-interactive-reporting/prpti.new</new-toolbar-button>

    <!-- default template -->
    <default-template>0_crystal_1_left_aligned.prpt</default-template>
    
    <!-- allowed page formats -->
    <!-- uncomment/edit to filter the list of page formats from the reporting engine -->
    <!-- <allowed-page-formats>A1,A2,A3,A4,A5,LEGAL,LETTER</allowed-page-formats> -->
         
    <!--
         The maximum number of results to be loaded for the Filter search list for any
         given search string.
      -->
    <search-list-limit>500</search-list-limit>
        
    <!-- default auto-refresh setting when the report is updated -->
    <default-auto-refresh>true</default-auto-refresh>
    
    <!-- default select-distinct setting for a new report -->
    <default-select-distinct>true</default-select-distinct>
    
    <!-- 
        The minimum allowable page dimension, in points (1/72 inches). This setting is 
        used to filter the list of page formats that the user can select from.
        The default is 3 inches.
        -->
    <minimum-page-dimension>216</minimum-page-dimension>
 
    <!-- The maximum number of rows that will be rendered in a report on PIR edit and
         view mode. A zero value means no limit. -->
    <query-limit>100000</query-limit>

    <!-- Initial value for user defined row limit. Zero or absent value means 
        no value. In this case, result will be limited by query-limit, or any value 
        that user will enter on UI. -->
    <design-query-limit>500</design-query-limit>

    <amd-root-path>content/pentaho-interactive-reporting/resources/web</amd-root-path>
    <amd-root-namespace>pentaho-interactive-reporting</amd-root-namespace>
</settings>